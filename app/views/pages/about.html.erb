<div class="app-card-container">
  <div class="card">
    <h1>About Me</h1>

    <hr />

    <div class="row">
      <div class="col-md-4">
        <%= image_tag "Preston_Hall.jpg", width: 300, alt: "profile image", class: 'profile-img' %>
      </div>

      <div class="col-md-8">
        <p>This is the about me page. Needs updated</p>

        <p>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controller="jobHistory"
            >
              Job History
          </button>

          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controller="education"
            >
              Education
          </button>

          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#skills"
            aria-expanded="false"
            aria-controller="skills"
            >
              Skills
          </button>
        </p>

        <p>
          <div class="collapse" id="jobHistory">
            <div class="card card-block">
              Job 1
            </div>
            <div class="card card-block">
              Job 2
            </div>
          </div>
          <div class="collapse" id="education">
            <div class="card card-block">
              School 1
            </div>
            <div class="card card-block">
              School 2
            </div>
          </div>
          <div class="collapse" id="skills">
            <div class="skills">
              <% @skills.each do |skill| %>
                <div>
                  <p><%= skill.title %></p>
                  <div class="progress">
                    <div
                      class="progress-bar progress-bar-striped bg-success"
                      role="progressbar"
                      aria-valuenow="<%= skill.percent_utilized %>"
                      aria-valuemax="100"
                      style="width: <%= skill.percent_utilized %>%"
                    ></div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>
